{
  "name": "price-monitor-pro",
  "version": "1.0.0",
  "description": "Professional price monitoring and deal finding desktop application with eBay auction tracking",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build:mac && npm run build:win && npm run build:linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "price monitoring",
    "deal finder",
    "ebay deals",
    "shopping",
    "automation",
    "desktop app",
    "price tracker",
    "auction monitor"
  ],
  "author": "Price Monitor Pro",
  "license": "Commercial",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "electron-store": "^8.1.0",
    "howler": "^2.2.4",
    "node-fetch": "^2.6.9"
  },
  "build": {
    "appId": "com.pricemonitor.pro",
    "productName": "Price Monitor Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../price_monitor.py",
        "to": "price_monitor.py"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
